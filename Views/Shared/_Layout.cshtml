<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta property="og:title" content="Home - Portfolio">
    <meta property="og:description" content="Welcome to my portfolio website. Explore my projects and experience.">
    <meta property="og:image" content="https://maxfort.co/images/preview.jpg">
    <meta property="og:url" content="https://maxfort.co">
    <meta property="og:type" content="website">
    <title>@ViewData["Title"] - Portfolio</title>

    <!-- Bootstrap & External Libraries -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/lightbox2/2.11.3/css/lightbox.min.css">
    
    <!-- Custom Styles -->
    <link rel="stylesheet" href="~/css/site.css">

    <!-- GSAP Animations -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/gsap/3.12.2/gsap.min.js" defer></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js" defer></script>
</head>
<body>
    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg navbar-dark">
        <div class="container">
            <a class="navbar-brand fw-bold" href="/">Maksym Fortelnyy</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item"><a class="nav-link" href="/">Home</a></li>
                    <li class="nav-item"><a class="nav-link" href="#projects">Projects</a></li>
                    <li class="nav-item"><a class="nav-link" href="#contact">Contact</a></li>
                </ul>
            </div>
        </div>
    </nav>

    <!-- Main Content -->
    <div class="container-fluid p-0">
        @RenderBody()
    </div>

    <!-- Footer -->
    <footer class="text-center py-4">
        <p>&copy; @DateTime.Now.Year Maksym Fortelnyy | Built with .NET Core MVC</p>
    </footer>

    <!-- Custom JS -->
    <script>
        gsap.to("#hero-text", { opacity: 1, duration: 2, y: -20 });
    </script>
</body>
</html>